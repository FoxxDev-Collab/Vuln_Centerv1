@model VulnMgmt.Web.Models.ViewModels.HostEditViewModel
@{
    ViewData["Title"] = "Edit Host";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Hosts</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@(Model.DisplayName ?? Model.DNSName ?? "Host")</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
</nav>

<h1 class="mb-4"><i class="bi bi-pencil me-2"></i>Edit Host</h1>

<div class="row">
    <div class="col-lg-8">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="LastScanDate" />
            <input type="hidden" asp-for="LastScanVulnCount" />

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-building me-1"></i>Site Assignment
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="SiteId" class="form-label">Site <span class="text-danger">*</span></label>
                        <select asp-for="SiteId" asp-items="Model.Sites" class="form-select">
                            <option value="0">-- Select Site --</option>
                        </select>
                        <span asp-validation-for="SiteId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-pc-display me-1"></i>Host Identification
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DNSName" class="form-label"></label>
                            <input asp-for="DNSName" class="form-control" />
                            <span asp-validation-for="DNSName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NetBIOSName" class="form-label"></label>
                            <input asp-for="NetBIOSName" class="form-control" />
                            <span asp-validation-for="NetBIOSName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DisplayName" class="form-label"></label>
                            <input asp-for="DisplayName" class="form-control" />
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<VulnMgmt.Web.Models.Domain.HostStatus>()" class="form-select"></select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-hdd-network me-1"></i>Network Information
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="LastKnownIPAddress" class="form-label"></label>
                            <input asp-for="LastKnownIPAddress" class="form-control" />
                            <span asp-validation-for="LastKnownIPAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastKnownMACAddress" class="form-label"></label>
                            <input asp-for="LastKnownMACAddress" class="form-control" />
                            <span asp-validation-for="LastKnownMACAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-cpu me-1"></i>System Information
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="OperatingSystem" class="form-label"></label>
                            <input asp-for="OperatingSystem" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="OSVersion" class="form-label"></label>
                            <input asp-for="OSVersion" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="AssetType" class="form-label"></label>
                            <select asp-for="AssetType" asp-items="Html.GetEnumSelectList<VulnMgmt.Web.Models.Domain.AssetType>()" class="form-select"></select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="AssetTag" class="form-label"></label>
                            <input asp-for="AssetTag" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="SerialNumber" class="form-label"></label>
                            <input asp-for="SerialNumber" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.LastScanDate.HasValue)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="bi bi-clock-history me-1"></i>Scan Information (Read-Only)
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Last Scan Date</dt>
                            <dd class="col-sm-8">@Model.LastScanDate.Value.ToString("MM/dd/yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Vulnerabilities Found</dt>
                            <dd class="col-sm-8">@Model.LastScanVulnCount</dd>
                        </dl>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-between">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                </div>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-1"></i>Delete Host
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
