@model VulnMgmt.Web.Models.ViewModels.HostCreateViewModel
@{
    ViewData["Title"] = "Create Host";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Host" asp-action="Index">Hosts</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
</nav>

<h1 class="mb-4"><i class="bi bi-plus-lg me-2"></i>Create Host</h1>

<div class="row">
    <div class="col-lg-8">
        <form asp-action="Create" method="post">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-building me-1"></i>Site Assignment
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="SiteId" class="form-label">Site <span class="text-danger">*</span></label>
                        <select asp-for="SiteId" asp-items="Model.Sites" class="form-select">
                            <option value="0">-- Select Site --</option>
                        </select>
                        <span asp-validation-for="SiteId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-pc-display me-1"></i>Host Identification
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DNSName" class="form-label"></label>
                            <input asp-for="DNSName" class="form-control" placeholder="server01.domain.com" />
                            <span asp-validation-for="DNSName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NetBIOSName" class="form-label"></label>
                            <input asp-for="NetBIOSName" class="form-control" placeholder="SERVER01" />
                            <span asp-validation-for="NetBIOSName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DisplayName" class="form-label"></label>
                            <input asp-for="DisplayName" class="form-control" placeholder="Friendly name for display" />
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                            <div class="form-text">If left blank, DNS or NetBIOS name will be used.</div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<VulnMgmt.Web.Models.Domain.HostStatus>()" class="form-select"></select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-hdd-network me-1"></i>Network Information
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="LastKnownIPAddress" class="form-label"></label>
                            <input asp-for="LastKnownIPAddress" class="form-control" placeholder="192.168.1.100" />
                            <span asp-validation-for="LastKnownIPAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastKnownMACAddress" class="form-label"></label>
                            <input asp-for="LastKnownMACAddress" class="form-control" placeholder="00:1A:2B:3C:4D:5E" />
                            <span asp-validation-for="LastKnownMACAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-cpu me-1"></i>System Information
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="OperatingSystem" class="form-label"></label>
                            <input asp-for="OperatingSystem" class="form-control" placeholder="Windows Server 2022" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="OSVersion" class="form-label"></label>
                            <input asp-for="OSVersion" class="form-control" placeholder="21H2" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="AssetType" class="form-label"></label>
                            <select asp-for="AssetType" asp-items="Html.GetEnumSelectList<VulnMgmt.Web.Models.Domain.AssetType>()" class="form-select"></select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="AssetTag" class="form-label"></label>
                            <input asp-for="AssetTag" class="form-control" placeholder="IT-2024-001" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="SerialNumber" class="form-label"></label>
                            <input asp-for="SerialNumber" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>Create Host
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
