@using VulnMgmt.Web.Models.Domain
@model StigChecklist
@{
    ViewData["Title"] = Model.Title ?? "Checklist Details";
    var results = ViewBag.Results as List<StigChecklistResult>;
    var search = ViewBag.Search as string;
    var severity = ViewBag.Severity as StigSeverity?;
    var status = ViewBag.Status as StigResultStatus?;
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalResults = (int)ViewBag.TotalResults;
    var total = Model.OpenCount + Model.NotAFindingCount + Model.NotApplicableCount + Model.NotReviewedCount;
    var completionPct = total > 0 ? ((Model.OpenCount + Model.NotAFindingCount + Model.NotApplicableCount) * 100 / total) : 0;
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index">Checklists</a></li>
            <li class="breadcrumb-item active">@(Model.Title ?? "Details")</li>
        </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="h3"><i class="bi bi-clipboard-check me-2"></i>@(Model.Title ?? "Checklist")</h1>
            <p class="text-muted mb-0">
                <a asp-controller="Host" asp-action="Details" asp-route-id="@Model.HostId" class="text-decoration-none">
                    @(Model.Host?.DisplayName ?? Model.Host?.DNSName)
                </a>
                @if (Model.Host?.Site != null)
                {
                    <span>| @Model.Host.Site.Name</span>
                }
                <span class="ms-2">|</span>
                <span class="ms-2">@Model.BenchmarkVersion?.StigBenchmark?.Title</span>
                <span class="badge bg-primary ms-1">V@(Model.BenchmarkVersion?.Version)R@(Model.BenchmarkVersion?.Release)</span>
            </p>
        </div>
        <div class="d-flex gap-2">
            @if (User.IsInRole("Admin") || User.IsInRole("ISSM") || User.IsInRole("ISSO") || User.IsInRole("SysAdmin"))
            {
                <a asp-action="Import" asp-route-hostId="@Model.HostId" class="btn btn-primary">
                    <i class="bi bi-upload me-1"></i>Import Results
                </a>
            }
            <a asp-action="Export" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="bi bi-download me-1"></i>Export CKLB
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("ISSM"))
            {
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-1"></i>Delete
                </a>
            }
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-2">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="h3 mb-0 text-danger">@Model.OpenCount</div>
                <small class="text-muted">Open</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="h3 mb-0 text-success">@Model.NotAFindingCount</div>
                <small class="text-muted">Not a Finding</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="h3 mb-0 text-info">@Model.NotApplicableCount</div>
                <small class="text-muted">Not Applicable</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-center h-100">
            <div class="card-body">
                <div class="h3 mb-0 text-secondary">@Model.NotReviewedCount</div>
                <small class="text-muted">Not Reviewed</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-1">
                    <small>Completion</small>
                    <small>@completionPct%</small>
                </div>
                <div class="progress" style="height: 25px;">
                    <div class="progress-bar bg-danger" style="width: @(total > 0 ? Model.OpenCount * 100.0 / total : 0)%" title="Open"></div>
                    <div class="progress-bar bg-success" style="width: @(total > 0 ? Model.NotAFindingCount * 100.0 / total : 0)%" title="Not a Finding"></div>
                    <div class="progress-bar bg-info" style="width: @(total > 0 ? Model.NotApplicableCount * 100.0 / total : 0)%" title="Not Applicable"></div>
                    <div class="progress-bar bg-secondary" style="width: @(total > 0 ? Model.NotReviewedCount * 100.0 / total : 0)%" title="Not Reviewed"></div>
                </div>
                <div class="d-flex justify-content-between mt-1">
                    <small class="text-muted">@(Model.OpenCount + Model.NotAFindingCount + Model.NotApplicableCount) of @total reviewed</small>
                    @{
                        var statusClass = Model.Status switch
                        {
                            ChecklistStatus.Complete => "bg-success",
                            ChecklistStatus.InProgress => "bg-warning text-dark",
                            _ => "bg-secondary"
                        };
                    }
                    <span class="badge @statusClass">@Model.Status</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i>Filter Results
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" name="search" class="form-control" value="@search"
                       placeholder="Search by Vuln ID, Rule ID, Title...">
            </div>
            <div class="col-md-3">
                <label class="form-label">Severity</label>
                <select name="severity" class="form-select">
                    <option value="">All Severities</option>
                    <option value="@VulnMgmt.Web.Models.Domain.StigSeverity.High" selected="@(severity == VulnMgmt.Web.Models.Domain.StigSeverity.High)">CAT I (High)</option>
                    <option value="@VulnMgmt.Web.Models.Domain.StigSeverity.Medium" selected="@(severity == VulnMgmt.Web.Models.Domain.StigSeverity.Medium)">CAT II (Medium)</option>
                    <option value="@VulnMgmt.Web.Models.Domain.StigSeverity.Low" selected="@(severity == VulnMgmt.Web.Models.Domain.StigSeverity.Low)">CAT III (Low)</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="@VulnMgmt.Web.Models.Domain.StigResultStatus.NotReviewed" selected="@(status == VulnMgmt.Web.Models.Domain.StigResultStatus.NotReviewed)">Not Reviewed</option>
                    <option value="@VulnMgmt.Web.Models.Domain.StigResultStatus.Open" selected="@(status == VulnMgmt.Web.Models.Domain.StigResultStatus.Open)">Open</option>
                    <option value="@VulnMgmt.Web.Models.Domain.StigResultStatus.NotAFinding" selected="@(status == VulnMgmt.Web.Models.Domain.StigResultStatus.NotAFinding)">Not a Finding</option>
                    <option value="@VulnMgmt.Web.Models.Domain.StigResultStatus.NotApplicable" selected="@(status == VulnMgmt.Web.Models.Domain.StigResultStatus.NotApplicable)">Not Applicable</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list-check me-2"></i>Results</span>
        <span class="badge bg-secondary">Showing @results?.Count of @totalResults</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 120px;">Vuln ID</th>
                        <th class="text-center" style="width: 90px;">Severity</th>
                        <th>Title</th>
                        <th class="text-center" style="width: 130px;">Status</th>
                        <th style="width: 70px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (results != null)
                    {
                        @foreach (var result in results)
                        {
                            var sevClass = result.StigRule.Severity switch
                            {
                                VulnMgmt.Web.Models.Domain.StigSeverity.High => "bg-danger",
                                VulnMgmt.Web.Models.Domain.StigSeverity.Medium => "bg-warning text-dark",
                                VulnMgmt.Web.Models.Domain.StigSeverity.Low => "bg-info",
                                _ => "bg-secondary"
                            };
                            var catLabel = result.StigRule.Severity switch
                            {
                                VulnMgmt.Web.Models.Domain.StigSeverity.High => "CAT I",
                                VulnMgmt.Web.Models.Domain.StigSeverity.Medium => "CAT II",
                                VulnMgmt.Web.Models.Domain.StigSeverity.Low => "CAT III",
                                _ => "?"
                            };
                            var resultClass = result.Status switch
                            {
                                VulnMgmt.Web.Models.Domain.StigResultStatus.Open => "bg-danger",
                                VulnMgmt.Web.Models.Domain.StigResultStatus.NotAFinding => "bg-success",
                                VulnMgmt.Web.Models.Domain.StigResultStatus.NotApplicable => "bg-info",
                                _ => "bg-secondary"
                            };
                            var resultLabel = result.Status switch
                            {
                                VulnMgmt.Web.Models.Domain.StigResultStatus.Open => "Open",
                                VulnMgmt.Web.Models.Domain.StigResultStatus.NotAFinding => "Not a Finding",
                                VulnMgmt.Web.Models.Domain.StigResultStatus.NotApplicable => "N/A",
                                _ => "Not Reviewed"
                            };
                            <tr>
                                <td>
                                    <a asp-action="Result" asp-route-id="@result.Id" class="text-decoration-none fw-semibold">
                                        @result.StigRule.VulnId
                                    </a>
                                </td>
                                <td class="text-center">
                                    <span class="badge @sevClass">@catLabel</span>
                                </td>
                                <td>
                                    <span title="@result.StigRule.RuleTitle">
                                        @(result.StigRule.RuleTitle.Length > 70 ? result.StigRule.RuleTitle.Substring(0, 70) + "..." : result.StigRule.RuleTitle)
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge @resultClass">@resultLabel</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Result" asp-route-id="@result.Id" class="btn btn-sm btn-outline-primary" title="View/Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (totalPages > 1)
    {
        <div class="card-footer">
            <nav aria-label="Results pagination">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(currentPage - 1)" asp-route-search="@search" asp-route-severity="@severity" asp-route-status="@status">Previous</a>
                    </li>
                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-route-page="@i" asp-route-search="@search" asp-route-severity="@severity" asp-route-status="@status">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(currentPage + 1)" asp-route-search="@search" asp-route-severity="@severity" asp-route-status="@status">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<a asp-action="Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left me-2"></i>Back to Checklists
</a>
