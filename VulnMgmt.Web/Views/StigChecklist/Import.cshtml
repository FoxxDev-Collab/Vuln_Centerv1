@{
    ViewData["Title"] = "Import Scan Results";
    var hosts = ViewBag.Hosts as SelectList;
    var selectedHostId = ViewBag.SelectedHostId as int?;
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index">Checklists</a></li>
            <li class="breadcrumb-item active">Import</li>
        </ol>
    </nav>
    <h1 class="h3"><i class="bi bi-upload me-2"></i>Import Scan Results</h1>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-file-earmark-arrow-up me-2"></i>Upload Scan Results
            </div>
            <div class="card-body">
                <form asp-action="Import" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="hostId" class="form-label">Target Host <span class="text-danger">*</span></label>
                        <select name="hostId" id="hostId" class="form-select" required asp-items="@hosts">
                            <option value="">-- Select Host --</option>
                        </select>
                        <div class="form-text">Select the host this scan was performed on.</div>
                    </div>

                    <div class="mb-3">
                        <label for="file" class="form-label">Scan Results File <span class="text-danger">*</span></label>
                        <input type="file" class="form-control" id="file" name="file"
                               accept=".cklb,.json,.xml" required>
                        <div class="form-text">
                            Select an XCCDF results file (.xml) or CKLB file (.cklb, .json).
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="importBtn">
                            <i class="bi bi-upload me-2"></i>Import Results
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Import Information
            </div>
            <div class="card-body">
                <h6>Supported File Types</h6>
                <ul class="small">
                    <li><strong>XCCDF Results (.xml)</strong> - Scan results from SCAP tools (e.g., SCC, SCAP Compliance Checker)</li>
                    <li><strong>CKLB (.cklb)</strong> - STIG Viewer checklist format (JSON)</li>
                    <li><strong>JSON (.json)</strong> - Same format as CKLB</li>
                </ul>

                <h6>XCCDF Results Mapping</h6>
                <ul class="small">
                    <li><strong>pass</strong> → Not a Finding</li>
                    <li><strong>fail</strong> → Open</li>
                    <li><strong>notapplicable</strong> → Not Applicable</li>
                    <li><strong>error, notchecked</strong> → Not Reviewed</li>
                </ul>

                <h6>What happens during import?</h6>
                <ul class="small">
                    <li>The STIG must already be imported into the STIG Library</li>
                    <li>If a checklist exists for this host/STIG, results will be updated</li>
                    <li>If no checklist exists, a new one will be created</li>
                </ul>

                <div class="alert alert-warning small mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Important:</strong> Make sure the STIG benchmark has been imported into the STIG Library first.
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Checklists
    </a>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function() {
            var btn = document.getElementById('importBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Importing...';
        });
    </script>
}
