@{
    ViewData["Title"] = "Import STIG";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index">STIG Library</a></li>
            <li class="breadcrumb-item active">Import</li>
        </ol>
    </nav>
    <h1 class="h3"><i class="bi bi-upload me-2"></i>Import STIG</h1>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-file-earmark-arrow-up me-2"></i>Upload STIG File
            </div>
            <div class="card-body">
                <form asp-action="Import" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="files" class="form-label">Select STIG Files</label>
                        <input type="file" class="form-control" id="files" name="files"
                               accept=".xml,.zip" required multiple>
                        <div class="form-text">
                            Supported formats: XCCDF XML (.xml) or ZIP archive containing XCCDF files (.zip).
                            <strong>You can select multiple files.</strong>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="importBtn">
                            <i class="bi bi-upload me-2"></i>Import STIGs
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Import Information
            </div>
            <div class="card-body">
                <h6>Supported File Types</h6>
                <ul class="small">
                    <li><strong>XCCDF XML</strong> - Individual STIG benchmark files from DISA</li>
                    <li><strong>ZIP Archive</strong> - ZIP files containing one or more XCCDF files (including nested zips)</li>
                </ul>

                <h6>Version Handling</h6>
                <ul class="small">
                    <li>If a new STIG is imported, it will be added to the library</li>
                    <li>If a new version of an existing STIG is imported, it will be added as a new version</li>
                    <li>The new version will automatically become the current version</li>
                    <li>Previous versions are preserved and can be viewed/restored</li>
                </ul>

                <div class="alert alert-info small mb-0">
                    <i class="bi bi-lightbulb me-2"></i>
                    <strong>Tip:</strong> Download STIG files from <a href="https://public.cyber.mil/stigs/downloads/" target="_blank" class="alert-link">DISA's STIG Downloads page</a>.
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Library
    </a>
</div>

@section Scripts {
    <script>
        document.getElementById('files').addEventListener('change', function() {
            var fileCount = this.files.length;
            var btn = document.getElementById('importBtn');
            if (fileCount > 0) {
                btn.innerHTML = '<i class="bi bi-upload me-2"></i>Import ' + fileCount + ' File' + (fileCount > 1 ? 's' : '');
            } else {
                btn.innerHTML = '<i class="bi bi-upload me-2"></i>Import STIGs';
            }
        });

        document.querySelector('form').addEventListener('submit', function() {
            var btn = document.getElementById('importBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Importing...';
        });
    </script>
}
