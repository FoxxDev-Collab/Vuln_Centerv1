@model VulnMgmt.Web.Models.Domain.StigBenchmark
@{
    ViewData["Title"] = Model.Title;
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index">STIG Library</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="h3"><i class="bi bi-journal-bookmark me-2"></i>@Model.Title</h1>
            <p class="text-muted mb-0">
                <code>@Model.StigId</code>
                @if (Model.CurrentVersion != null)
                {
                    <span class="ms-2">|</span>
                    <span class="badge bg-primary ms-2">V@(Model.CurrentVersion.Version)</span>
                    @if (Model.CurrentVersion.Release != null)
                    {
                        <span class="badge bg-secondary">R@(Model.CurrentVersion.Release)</span>
                    }
                }
            </p>
        </div>
        <div class="d-flex gap-2">
            @if (Model.CurrentVersion != null)
            {
                <a asp-action="Version" asp-route-id="@Model.CurrentVersion.Id" class="btn btn-primary">
                    <i class="bi bi-list-check me-1"></i>View Rules
                </a>
            }
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-1"></i>Delete
                </a>
            }
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.Description))
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-info-circle me-2"></i>Description
        </div>
        <div class="card-body">
            <p class="mb-0">@Model.Description</p>
        </div>
    </div>
}

<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-clock-history me-2"></i>Version History</span>
                <span class="badge bg-secondary">@Model.Versions.Count version(s)</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Version</th>
                                <th>Release Info</th>
                                <th class="text-center">Rules</th>
                                <th>Benchmark Date</th>
                                <th>Imported</th>
                                <th class="text-center">Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var version in Model.Versions.OrderByDescending(v => v.ImportDate))
                            {
                                <tr class="@(version.IsActive ? "table-success" : "")">
                                    <td>
                                        <a asp-action="Version" asp-route-id="@version.Id" class="text-decoration-none fw-semibold">
                                            V@(version.Version)
                                            @if (!string.IsNullOrEmpty(version.Release))
                                            {
                                                <span class="text-muted">R@(version.Release)</span>
                                            }
                                        </a>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(version.ReleaseInfo))
                                        {
                                            <small>@version.ReleaseInfo</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">@version.RuleCount</td>
                                    <td>
                                        @if (version.BenchmarkDate.HasValue)
                                        {
                                            @version.BenchmarkDate.Value.ToString("dd MMM yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @version.ImportDate.ToString("MM/dd/yyyy HH:mm")
                                    </td>
                                    <td class="text-center">
                                        @if (version.IsActive)
                                        {
                                            <span class="badge bg-success">Current</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Previous</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (!version.IsActive && (User.IsInRole("Admin") || User.IsInRole("ISSM")))
                                        {
                                            <form asp-action="SetCurrentVersion" method="post" class="d-inline">
                                                <input type="hidden" name="benchmarkId" value="@Model.Id" />
                                                <input type="hidden" name="versionId" value="@version.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Set as Current">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                            <a asp-action="DeleteVersion" asp-route-id="@version.Id" class="btn btn-sm btn-outline-danger" title="Delete Version">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                        <a asp-action="Version" asp-route-id="@version.Id" class="btn btn-sm btn-outline-primary" title="View Rules">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-info-square me-2"></i>Benchmark Info
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">STIG ID</dt>
                    <dd class="col-sm-7"><code>@Model.StigId</code></dd>

                    @if (Model.CurrentVersion != null)
                    {
                        <dt class="col-sm-5">Current Version</dt>
                        <dd class="col-sm-7">V@(Model.CurrentVersion.Version)R@(Model.CurrentVersion.Release ?? "?")</dd>

                        <dt class="col-sm-5">Total Rules</dt>
                        <dd class="col-sm-7">@Model.CurrentVersion.RuleCount</dd>

                        @if (Model.CurrentVersion.BenchmarkDate.HasValue)
                        {
                            <dt class="col-sm-5">Benchmark Date</dt>
                            <dd class="col-sm-7">@Model.CurrentVersion.BenchmarkDate.Value.ToString("dd MMM yyyy")</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.CurrentVersion.FileName))
                        {
                            <dt class="col-sm-5">Source File</dt>
                            <dd class="col-sm-7"><small class="text-muted">@Model.CurrentVersion.FileName</small></dd>
                        }
                    }

                    <dt class="col-sm-5">Created</dt>
                    <dd class="col-sm-7">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>

                    <dt class="col-sm-5">Last Modified</dt>
                    <dd class="col-sm-7">@Model.ModifiedDate.ToString("MM/dd/yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left me-2"></i>Back to Library
</a>
