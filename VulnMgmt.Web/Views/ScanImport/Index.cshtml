@model VulnMgmt.Web.Models.ViewModels.ScanImportListViewModel
@{
    ViewData["Title"] = "Scan Import History";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3"><i class="bi bi-cloud-upload me-2"></i>Scan Import History</h1>
        <p class="text-muted mb-0">View imported scan files and their results</p>
    </div>
    <a asp-action="Upload" class="btn btn-primary">
        <i class="bi bi-upload me-2"></i>Import Scan
    </a>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i>Filter
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Site</label>
                <select name="siteId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Sites</option>
                    @foreach (var site in Model.AvailableSites)
                    {
                        <option value="@site.Id" selected="@(Model.FilterSiteId == site.Id)">@site.Name</option>
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>File Name</th>
                    <th>Site</th>
                    <th>Import Date</th>
                    <th>Imported By</th>
                    <th class="text-center">Rows</th>
                    <th class="text-center">Hosts</th>
                    <th class="text-center">Vulns</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Imports.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">No imports found. <a asp-action="Upload">Import your first scan</a>.</p>
                        </td>
                    </tr>
                }
                @foreach (var import in Model.Imports)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@import.Id" class="text-decoration-none">
                                <i class="bi bi-file-earmark-text me-1"></i>@import.FileName
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Site" asp-action="Details" asp-route-id="@import.SiteId" class="text-decoration-none">
                                @import.SiteName
                            </a>
                        </td>
                        <td>@import.ImportDate.ToString("g")</td>
                        <td>@(import.ImportedBy ?? "System")</td>
                        <td class="text-center">@import.TotalRows.ToString("N0")</td>
                        <td class="text-center">
                            <span class="badge bg-success" title="Created">+@import.HostsCreated</span>
                            @if (import.HostsUpdated > 0)
                            {
                                <span class="badge bg-info" title="Updated">~@import.HostsUpdated</span>
                            }
                        </td>
                        <td class="text-center">
                            <span class="badge bg-success" title="New">+@import.VulnerabilitiesImported</span>
                            @if (import.VulnerabilitiesUpdated > 0)
                            {
                                <span class="badge bg-info" title="Updated">~@import.VulnerabilitiesUpdated</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@import.Id" class="btn btn-outline-secondary" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("ISSM"))
                                {
                                    <a asp-action="Delete" asp-route-id="@import.Id" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
