@model VulnMgmt.Web.Models.ViewModels.ScanUploadViewModel
@{
    ViewData["Title"] = "Import Scan";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index">Scan Imports</a></li>
            <li class="breadcrumb-item active">Upload</li>
        </ol>
    </nav>
    <h1 class="h3"><i class="bi bi-upload me-2"></i>Import Scan Results</h1>
</div>

<div class="row">
    <div class="col-lg-6">
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-geo-alt me-2"></i>Target Site
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="SiteId" class="form-label"></label>
                        <select asp-for="SiteId" class="form-select" asp-items="@(new SelectList(Model.AvailableSites, "Id", "Name"))">
                            <option value="">-- Select a Site --</option>
                        </select>
                        <span asp-validation-for="SiteId" class="text-danger"></span>
                        <div class="form-text">Select the site that was scanned</div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-file-earmark-arrow-up me-2"></i>Scan File
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="File" class="form-label"></label>
                        <input asp-for="File" type="file" class="form-control" accept=".csv" />
                        <span asp-validation-for="File" class="text-danger"></span>
                        <div class="form-text">Upload a Nessus CSV export file (max 100 MB)</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="UpdateExisting" class="form-check-input" type="checkbox" />
                            <label asp-for="UpdateExisting" class="form-check-label"></label>
                        </div>
                        <div class="form-text">If checked, existing vulnerabilities will be updated with new scan data</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Optional notes about this import..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-cloud-upload me-2"></i>Import File
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Supported Format
            </div>
            <div class="card-body">
                <h6>Nessus CSV Export</h6>
                <p class="text-muted small">The following columns are recognized:</p>
                <ul class="small">
                    <li><strong>Required:</strong> Plugin ID</li>
                    <li><strong>Host:</strong> Host, IP Address, DNS Name, NetBIOS Name, MAC Address</li>
                    <li><strong>Severity:</strong> Risk/Severity (Critical, High, Medium, Low, Info)</li>
                    <li><strong>Details:</strong> Name, Synopsis, Description, Solution, See Also</li>
                    <li><strong>Network:</strong> Protocol, Port</li>
                    <li><strong>CVE:</strong> CVE column</li>
                    <li><strong>Exploit:</strong> Exploit Available, Exploit Ease, Exploit Frameworks</li>
                    <li><strong>Output:</strong> Plugin Output</li>
                </ul>

                <div class="alert alert-info small mb-0">
                    <i class="bi bi-lightbulb me-2"></i>
                    <strong>Tip:</strong> Export from Nessus using "CSV" format with all columns selected for best results.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
