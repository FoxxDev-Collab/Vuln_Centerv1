@model VulnMgmt.Web.Models.Domain.ScanImport
@{
    ViewData["Title"] = "Delete Import Record";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index">Scan Imports</a></li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>
    <h1 class="h3 text-danger"><i class="bi bi-trash me-2"></i>Delete Import Record</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this import record?</p>

                <div class="alert alert-warning">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Note:</strong> This only deletes the import record. The hosts and vulnerabilities imported from this file will remain in the system.
                </div>

                <dl class="row mb-0">
                    <dt class="col-sm-4">File Name</dt>
                    <dd class="col-sm-8">@Model.FileName</dd>

                    <dt class="col-sm-4">Site</dt>
                    <dd class="col-sm-8">@Model.Site.Name</dd>

                    <dt class="col-sm-4">Import Date</dt>
                    <dd class="col-sm-8">@Model.ImportDate.ToString("g")</dd>

                    <dt class="col-sm-4">Rows Processed</dt>
                    <dd class="col-sm-8">@Model.TotalRows.ToString("N0")</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Yes, Delete Record
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
