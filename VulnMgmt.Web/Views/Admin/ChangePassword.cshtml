@model VulnMgmt.Web.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
            <li class="breadcrumb-item"><a asp-action="EditUser" asp-route-id="@Model.UserId">@Model.Username</a></li>
            <li class="breadcrumb-item active">Change Password</li>
        </ol>
    </nav>
    <h1 class="h3"><i class="bi bi-key me-2"></i>Change Password</h1>
</div>

<div class="row">
    <div class="col-lg-5">
        <form asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Username" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-shield-lock me-2"></i>New Password for @Model.Username
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <div class="form-text">Minimum 8 characters</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-key me-2"></i>Change Password
                </button>
                <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
