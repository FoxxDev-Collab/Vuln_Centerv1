@model VulnMgmt.Web.Models.Domain.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
            <li class="breadcrumb-item active">Delete @Model.Username</li>
        </ol>
    </nav>
    <h1 class="h3 text-danger"><i class="bi bi-trash me-2"></i>Delete User</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this user?</p>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone.
                </div>

                <dl class="row mb-0">
                    <dt class="col-sm-4">Username</dt>
                    <dd class="col-sm-8">@Model.Username</dd>

                    <dt class="col-sm-4">Display Name</dt>
                    <dd class="col-sm-8">@Model.DisplayName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Role</dt>
                    <dd class="col-sm-8">@Model.Role</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Yes, Delete User
                        </button>
                        <a asp-action="Users" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
