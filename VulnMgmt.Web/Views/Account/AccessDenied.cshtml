@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mt-5 border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Access Denied</h4>
            </div>
            <div class="card-body text-center">
                <p class="lead">You do not have permission to access this resource.</p>
                <p>If you believe this is an error, please contact your administrator.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house me-1"></i>Return to Home
                </a>
            </div>
        </div>
    </div>
</div>
