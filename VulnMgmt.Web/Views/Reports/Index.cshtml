@model VulnMgmt.Web.Models.ViewModels.ReportsDashboardViewModel
@{
    ViewData["Title"] = "Reports";
}

<div class="mb-4">
    <h1 class="h3"><i class="bi bi-file-earmark-bar-graph me-2"></i>Reports & Export</h1>
    <p class="text-muted mb-0">Generate reports and export vulnerability data</p>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-danger bg-opacity-10 rounded p-3 me-3">
                        <i class="bi bi-shield-exclamation text-danger" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Vulnerability Summary</h5>
                        <small class="text-muted">Overview of all vulnerabilities</small>
                    </div>
                </div>
                <p class="card-text">View vulnerability counts by severity, status, and exploitability. Identify top vulnerabilities and high-risk hosts.</p>
            </div>
            <div class="card-footer bg-transparent">
                <a asp-action="VulnerabilitySummary" class="btn btn-outline-danger">
                    <i class="bi bi-eye me-2"></i>View Report
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 rounded p-3 me-3">
                        <i class="bi bi-pc-display text-primary" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Host Summary</h5>
                        <small class="text-muted">Overview of all hosts</small>
                    </div>
                </div>
                <p class="card-text">View host inventory by type and status. See vulnerability counts per host and identify assets needing attention.</p>
            </div>
            <div class="card-footer bg-transparent">
                <a asp-action="HostSummary" class="btn btn-outline-primary">
                    <i class="bi bi-eye me-2"></i>View Report
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-success bg-opacity-10 rounded p-3 me-3">
                        <i class="bi bi-download text-success" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">Export Data</h5>
                        <small class="text-muted">Download vulnerability data</small>
                    </div>
                </div>
                <p class="card-text">Export vulnerability data to CSV or Excel format. Filter by site, severity, status, and more.</p>
            </div>
            <div class="card-footer bg-transparent">
                <a asp-action="Export" class="btn btn-outline-success">
                    <i class="bi bi-file-earmark-arrow-down me-2"></i>Export Data
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header">
        <i class="bi bi-lightning me-2"></i>Quick Export
    </div>
    <div class="card-body">
        <p class="text-muted">Quickly export all open vulnerabilities:</p>
        <form asp-action="ExportExcel" method="post" class="d-inline">
            <input type="hidden" name="IncludeRemediated" value="false" />
            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-file-earmark-excel me-2"></i>Export All Open (Excel)
            </button>
        </form>
        <form asp-action="ExportCsv" method="post" class="d-inline">
            <input type="hidden" name="IncludeRemediated" value="false" />
            <button type="submit" class="btn btn-outline-success">
                <i class="bi bi-file-earmark-text me-2"></i>Export All Open (CSV)
            </button>
        </form>
    </div>
</div>
