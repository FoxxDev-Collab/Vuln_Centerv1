@model VulnMgmt.Web.Services.HostSummaryReport
@{
    ViewData["Title"] = "Host Summary Report";
    var sites = ViewBag.Sites as IEnumerable<VulnMgmt.Web.Models.Domain.Site>;
    var selectedSiteId = ViewBag.SelectedSiteId as int?;
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a asp-action="Index">Reports</a></li>
            <li class="breadcrumb-item active">Host Summary</li>
        </ol>
    </nav>
    <h1 class="h3"><i class="bi bi-pc-display me-2"></i>Host Summary Report</h1>
    <p class="text-muted">
        @if (!string.IsNullOrEmpty(Model.SiteName))
        {
            <span>Site: <strong>@Model.SiteName</strong> | </span>
        }
        Generated: @Model.GeneratedDate.ToString("f")
    </p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-funnel me-2"></i>Filter
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Site</label>
                <select name="siteId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Sites</option>
                    @if (sites != null)
                    {
                        @foreach (var site in sites)
                        {
                            <option value="@site.Id" selected="@(selectedSiteId == site.Id)">@site.Name</option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="h2 mb-0 text-primary">@Model.TotalHosts.ToString("N0")</div>
                <small class="text-muted">Total Hosts</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="h2 mb-0 text-success">@Model.ActiveHosts.ToString("N0")</div>
                <small class="text-muted">Active Hosts</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="h2 mb-0 text-warning">@Model.HostsWithVulnerabilities.ToString("N0")</div>
                <small class="text-muted">With Vulnerabilities</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="h2 mb-0 text-info">@((Model.TotalHosts - Model.HostsWithVulnerabilities).ToString("N0"))</div>
                <small class="text-muted">Clean Hosts</small>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-list me-2"></i>All Hosts
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Host</th>
                        <th>IP Address</th>
                        <th class="text-center">Critical</th>
                        <th class="text-center">High</th>
                        <th class="text-center">Medium</th>
                        <th class="text-center">Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var host in Model.AllHosts)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Host" asp-action="Details" asp-route-id="@host.HostId" class="text-decoration-none">
                                    @host.HostName
                                </a>
                            </td>
                            <td>@(host.IPAddress ?? "-")</td>
                            <td class="text-center">
                                @if (host.CriticalCount > 0)
                                {
                                    <span class="badge bg-danger">@host.CriticalCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (host.HighCount > 0)
                                {
                                    <span class="badge bg-warning text-dark">@host.HighCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (host.MediumCount > 0)
                                {
                                    <span class="badge bg-info">@host.MediumCount</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td class="text-center">@host.TotalVulnerabilities</td>
                            <td class="text-end">
                                <a asp-controller="Host" asp-action="Details" asp-route-id="@host.HostId" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left me-2"></i>Back to Reports
</a>
